# Environment Configuration
# NODE_ENV: Set to 'development' for local, 'production' for deployed environments
NODE_ENV=development

# Server Configuration
# PORT: The port number the server will listen on
PORT=5000

# Database Configuration
# MONGO_URI: MongoDB connection string (use MongoDB Atlas for production)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/dermoscanners

# JWT Configuration
# JWT_SECRET: Secret key for signing JWT tokens (use a long random string in production)
JWT_SECRET=replace_with_long_random_secret
JWT_EXPIRES_IN=15m

# JWT_REFRESH_SECRET: Secret key for refresh tokens (different from JWT_SECRET)
JWT_REFRESH_SECRET=replace_with_long_random_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# CLIENT_URL: The URL of your frontend application (required for CORS)
# For production, set this to your deployed frontend URL (e.g., https://dermoscanner.vercel.app)
CLIENT_URL=http://localhost:5173

# Email Configuration (Optional)
EMAIL_FROM=no-reply@dermoscanners.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
